{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Convert sample data to JSON",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/fmpxml-to-json/",
        "args": [
          "-input", "${workspaceFolder}/samples/sample.xml",
          "-output", "${workspaceFolder}/samples/sample.json",
          "-recordID", "recordID",
          "-modID", "modificationID",
          "-hash", "hash",
          "-debug"
        ]
      },
      {
        "name": "Convert sample data to JSON Lines",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/fmpxml-to-json/",
        "args": [
          "-input", "${workspaceFolder}/samples/sample.xml",
          "-output", "${workspaceFolder}/samples/sample.jsonl",
          "-recordID", "recordID",
          "-modID", "modificationID",
          "-hash", "hash",
          "-json-stream",
          "-debug"
        ]
      },
      {
        "name": "Convert sample data to JSON size prefix",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/fmpxml-to-json/",
        "args": [
          "-input", "${workspaceFolder}/samples/sample.xml",
          "-output", "${workspaceFolder}/samples/sample.jsonl",
          "-recordID", "recordID",
          "-modID", "modificationID",
          "-hash", "hash",
          "-json-stream",
          "-json-stream-prefix-size", "10",
          "-debug"
        ]
      }
    ]
  }