{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Convert sample data",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/fmpxml-to-json/",
        "args": [
          "-input", "${workspaceFolder}/samples/sample.xml",
          "-output", "${workspaceFolder}/samples/sample.json",
          "-recordID", "recordID",
          "-modID", "modificationID"
        ]
      },
      {
        "name": "Convert sample data with full output",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/fmpxml-to-json/",
        "args": [
          "-input", "${workspaceFolder}/samples/sample.xml",
          "-output", "${workspaceFolder}/samples/sample-full.json",
          "-recordID", "recordID",
          "-modID", "modificationID",
          "-full"
        ]
      }
    ]
  }